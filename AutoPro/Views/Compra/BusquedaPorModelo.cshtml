    <!-- Small boxes (Stat box) -->
    <div class="row" style="height:150px">
        @using (Html.BeginForm("BusquedaPorModelo", "Compra", FormMethod.Post, new { role = "form", id = "busquedaid", enctype = "multipart/form-data" }))
        {
