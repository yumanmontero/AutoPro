@model AutoPro.Models.RegistroClienteViewModel

@using (Html.BeginForm("RegistroCliente", "Venta", FormMethod.Post, new { role = "form", id = "registro_cliente_form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-body">
                    <!-- Date dd/mm/yyyy -->
                    <div class="form-group has-feedback">
                        @Html.EditorFor(m => m.ID_Cliente, new { @class = "form-control", placeholder = "Identificación" })
                        <span class="glyphicon glyphicon-info-sign form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(m => m.Apellido, new { @class = "form-control", placeholder = "Apellido" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(m => m.NumeroTlf, new { @class = "form-control", placeholder = "Telefono" })
                        <span class="glyphicon glyphicon-earphone form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(m => m.Email, new { @class = "form-control", placeholder = "Correo" })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        Dirección
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("DropPais", (SelectList)ViewBag.DropPaisValue)
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("DropEstado", new SelectList(new[] { "Seleccione Estado" }))

                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.localidad, new SelectList(new[] { "Seleccione Ciudad" }))

                    </div>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(m => m.DireccionDetallada, new { @class = "form-control", placeholder = "Direción Detallada" })
                        <span class="fa fa-home form-control-feedback"></span>
                    </div>

                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-5">
                        <button type="button" onclick="RegistrarCliente_Nuevo();" class="btn btn-primary btn-block btn-flat">Registrar</button>
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col (left) -->
    </div>
}